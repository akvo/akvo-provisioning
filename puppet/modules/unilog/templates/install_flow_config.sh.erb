#!/bin/bash

BRANCH=$1
ssh-keyscan github.com >> ~/.ssh/known_hosts

if [ -e <%= @approot %>/akvo-flow-server-config ]; then
    cd <%= @approot %>/akvo-flow-server-config
    git checkout $BRANCH
    git pull origin $BRANCH
else
    git clone git@github.com:akvo/akvo-flow-server-config.git <%= @approot %>/akvo-flow-server-config
    git checkout $BRANCH
fi
