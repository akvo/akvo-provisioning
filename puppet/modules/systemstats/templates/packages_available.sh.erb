#!/bin/bash

COUNTS=`/usr/lib/update-notifier/update-motd-updates-available | sed '/^$/d' | sed 's/[^0-9]//g'`

if [[ -z $COUNTS ]]
then
    TOTAL=0
    SECURITY=0
else
    read -ra AVAILABLE <<< $COUNTS
    TOTAL="${AVAILABLE[0]}"
    SECURITY="${AVAILABLE[1]}"
fi

/usr/local/bin/sendstat packages.total $TOTAL g
/usr/local/bin/sendstat packages.security $SECURITY g