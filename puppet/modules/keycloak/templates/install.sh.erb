#!/bin/bash

set -e


### Files
files="http://files.support.akvo-ops.org/keycloak/"


### Keycloak
keycloak="${files}/keycloak-<%= @kc_release %>.tar.gz"

curl -L "${keycloak}" | tar xz &&


### PostgreSQL JDBC driver
psql_driver="${files}/postgresql-<%= @psql_driver_release %>.jar"
psql_driver_dir="<%= @appdir %>/modules/system/layers/base/org/postgresql/jdbc/main"
config_file="<%= @appdir %>/standalone/configuration/standalone.xml"

mkdir -p "${psql_driver_dir}"
cd "${psql_driver_dir}"
cp "<%= @approot %>/module.xml" .
curl -LO "${psql_driver}" &&
saxon-xslt -o "${config_file}" "${config_file}" \
    "<%= @approot %>/configure.xsl" &&


### Akvo theme
theme="${files}/themes.tar.gz"

cd "<%= @appdir %>" &&
curl "${theme}" | tar xz &&


### We are probably done if we get this far!
touch "<%= @approot %>/.installed-keycloak-<%= @kc_release %>"
