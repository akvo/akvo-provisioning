#!/bin/bash

set -e


### Environment
FILES="http://files.support.akvo-ops.org/keycloak"
KEYCLOAK="${FILES}/<%= @kc_release %>.tar.gz"
KEYCLOAK_THEME="${FILES}/themes.tar.gz"
POSTGRESQL_DRIVER="${FILES}/postgresql-<%= @psql_driver_release %>.jar"


### Keycloak
wget -qO- "${KEYCLOAK}" | tar xvz


### PostgreSQL driver
mkdir -p "<%= @psql_driver_dir %>"
cd "<%= @psql_driver_dir %>"
wget -N "${POSTGRESQL_DRIVER}"
saxon-xslt "-o <%= @config_file %>" \
  "<%= @config_file %>" \
  "<%= @appdir %>/configure.xsl"


### Akvo theme
cd "<%= @appdir %>"
wget -qO- "${KEYCLOAK_THEME}" | tar xvz


### We're probably done if we get this far!
touch "<%= @approot %>/.installed-keycloak-<%= @kc_release %>-postgresql-<%= @psql_driver_release %>"
